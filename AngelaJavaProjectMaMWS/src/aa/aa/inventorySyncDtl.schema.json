{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"properties": {
		"OriginalPayload": {
			"type": "object",
			"properties": {
				"ContextInformation": {
					"type": "object",
					"properties": {
						"Messages": {
							"type": "object"
						},
						"Organization": {
							"type": "string"
						},
						"UserId": {
							"type": "string"
						},
						"UserLocale": {
							"type": "string"
						},
						"Location": {
							"type": "string"
						}
					},
					"required": [
						"Messages",
						"Organization",
						"UserId",
						"UserLocale",
						"Location"
					]
				},
				"CurrentPage": {
					"type": "number"
				},
				"ExportDocuments": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"Messages": {
								"type": "object"
							},
							"PIXSpecification": {
								"type": "string"
							},
							"Description": {
								"type": "string"
							},
							"SourceTransactionType": {
								"type": "string"
							},
							"SourceEventName": {
								"type": "string"
							},
							"ItemDefinition": {
								"type": "object",
								"properties": {
									"ItemId": {
										"type": "string"
									},
									"Description": {
										"type": "string"
									}
								},
								"required": [
									"ItemId",
									"Description"
								]
							},
							"SubItemFields": {
								"type": "object",
								"properties": {
									"InventoryTypeId": {
										"type": "string"
									},
									"ManufactureDate": {
										"type": "string"
									}
								},
								"required": [
									"InventoryTypeId",
									"ManufactureDate"
								]
							},
							"PIXFields": {
								"type": "object",
								"properties": {
									"BusinessUnitId": {
										"type": "string"
									},
									"ExternalOrganizationId": {
										"type": "string"
									},
									"TransactionDateTime": {
										"type": "string"
									}
								},
								"required": [
									"BusinessUnitId",
									"ExternalOrganizationId",
									"TransactionDateTime"
								]
							},
							"TransactionNumber": {
								"type": "string"
							},
							"SequenceNumber": {
								"type": "number"
							},
							"TransactionDateTime": {
								"type": "string"
							},
							"Organization": {
								"type": "string"
							},
							"Facility": {
								"type": "string"
							}
						},
						"required": [
							"Messages",
							"PIXSpecification",
							"Description",
							"SourceTransactionType",
							"SourceEventName",
							"ItemDefinition",
							"SubItemFields",
							"PIXFields",
							"TransactionNumber",
							"SequenceNumber",
							"TransactionDateTime",
							"Organization",
							"Facility"
						]
					}
				}
			},
			"required": [
				"ContextInformation",
				"CurrentPage",
				"ExportDocuments"
			]
		}
	},
	"required": [
		"OriginalPayload"
	]
}
